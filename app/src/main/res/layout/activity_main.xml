<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_formula"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_limpar"
            style="@style/op_button"
            android:layout_weight="3.3"
            android:text="C"/>
        <Button
            android:id="@+id/bt_divisao"
            style="@style/op_button"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_7"
            style="@style/number_button"
            android:text="7"/>

        <Button
            android:id="@+id/bt_8"
            style="@style/number_button"
            android:text="8"/>
        <Button
            android:id="@+id/bt_9"
            style="@style/number_button"
            android:text="9"/>

        <Button
            android:textSize="25sp"
            android:id="@+id/bt_multiplicacao"
            style="@style/op_button"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_4"
            style="@style/number_button"
            android:text="4"/>

        <Button
            android:id="@+id/bt_5"
            style="@style/number_button"
            android:text="5"/>
        <Button
            android:id="@+id/bt_6"
            style="@style/number_button"
            android:text="6"/>

        <Button
            android:id="@+id/bt_menos"
            style="@style/op_button"
            android:text="-"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_1"
            style="@style/number_button"
            android:text="1"/>

        <Button
            android:id="@+id/bt_2"
            style="@style/number_button"
            android:text="2"/>
        <Button
            android:id="@+id/bt_3"
            style="@style/number_button"
            android:text="3"/>

        <Button
            android:id="@+id/bt_soma"
            style="@style/op_button"
            android:text="+"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_ponto"
            style="@style/number_button"
            android:text="."/>

        <Button
            android:id="@+id/bt_0"
            style="@style/number_button"
            android:text="0"/>
        <Button
            android:id="@+id/bt_apaga"
            style="@style/number_button"
            android:textSize="24dp"
            android:text="DEL"/>

        <Button
            android:id="@+id/bt_igual"
            style="@style/op_button"
            android:text="="/>

    </LinearLayout>


</LinearLayout>